= javascript_include_tag "voice_extension/application"

%ul.breadcrumb
  %li
    = link_to 'Home', main_app.admin_root_path
    
  %li
    = link_to 'Extensions', main_app.admin_extensions_path
    
  %li
    = link_to 'IVR Extension', settings_path
    
  %li.active Pages

.page-header
  %h1 Pages
  = link_to new_page_path, class: 'btn btn-xs btn-primary' do
    %i.fa.fa-plus
    Add Page

- if @pages.empty?
  .alert No pages yet.
- else
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th.ap-text-center Root?
    %tbody
      - @pages.each do |page|
        %tr
          %td= link_to "#{page.name}", page
          %td.ap-text-center
            - if page.root
              %i.fa.fa-check
          %td
            .btn-group.pull-right
              = link_to page, class: 'btn btn-xs' do
                %i.fa.fa-list-ul
                Manage Menus
              = link_to edit_page_path(page), class: 'btn btn-xs' do
                %i.fa.fa-pencil
                Edit
              = link_to page, method: :delete, class: 'btn btn-xs', data: {confirm: 'Are you sure?'} do
                %i.fa.fa-trash-o
                Delete
